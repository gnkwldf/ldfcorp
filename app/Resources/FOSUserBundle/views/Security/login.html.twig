{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}{{ parent() }} - Login{% endblock %}

{% block stylesheets %}
<link href="{{ asset('bundles/gnkwldfldfcorp/css/login.css') }}" rel="stylesheet" />
{% endblock %}

{% block fos_user_content %}
<div class="container">
    <article>
        <form class="form-signin" role="form" action="{{ path("fos_user_security_check") }}" method="post">
            <h2 class="form-signin-heading">{{ 'security.login.title'|trans }}</h2>
{% if error %}
            <div><p class="bg-danger">{{ error|trans }}</p></div>
{% endif %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.placeholder.username'|trans }}" />

            <input class="form-control" type="password" id="password" name="_password" required="required" placeholder="{{ 'security.login.placeholder.password'|trans }}" />
            <label class="checkbox" for="remember_me">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
            </label>

            <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </form>
    </article>
</div>
{% endblock fos_user_content %}