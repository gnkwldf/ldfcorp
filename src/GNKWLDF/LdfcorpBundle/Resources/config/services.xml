<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="gnkw_video_manager.class">GNKWLDF\LdfcorpBundle\Service\VideoManager</parameter>
        <parameter key="gnkw_iframe_validator.class">GNKWLDF\LdfcorpBundle\Validator\Constraints\IframeVideoValidator</parameter>
    </parameters>

    <services>
        <service id="gnkw_video_manager" class="%gnkw_video_manager.class%"/>
        <service id="validator.unique.gnkw_iframe_validator" class="%gnkw_iframe_validator.class%">
            <argument type="service" id="gnkw_video_manager" />
            <tag name="validator.constraint_validator" alias="gnkw_iframe_validator" />
        </service>
    </services>
</container>
