{% extends "GNKWLDFLdfcorpBundle::standardLayout.html.twig" %}

{% block title %}{{ parent() }} - Chat{% endblock %}

{% block javascripts %}
<script src="https://cdn.socket.io/socket.io-1.1.0.js"></script>
<script src="{{ path('ldfcorp_chat_js_main')}}"></script>
{% endblock %}

{% block stylesheets %}
<style>
    .ldfcorp-chat {
        position: relative;
        min-height: 200px;
    }
    .ldfcorp-chat .ldfcorp-chat-messages {
        position: absolute;
        right: 0;
        top: 0;
        left: 0;
        overflow: auto;
        bottom: 50px;
        margin: 0px;
    }
    .ldfcorp-chat ul.ldfcorp-chat-messages {
        padding: 0px;
        list-style-type: none;
    }
    .ldfcorp-chat ul.ldfcorp-chat-messages li{
        padding: 2px 5px;
        overflow: hidden;
    }
    .ldfcorp-chat ul.ldfcorp-chat-messages li:nth-child(even) {
        background: #eee;
    }
    .ldfcorp-chat .ldfcorp-chat-form {
        padding: 5px;
        position: absolute;
        height: 50px;
        right: 0;
        left: 0;
        bottom: 0px;
    }
</style>
{% endblock %}

{% block body %}
<header>
    {{ render(controller('GNKWLDFLdfcorpBundle:Default:bootstrapHeader', { 'pageActive': 'ldfcorp_chat' })) }}
</header>
<div class="container ldfcorp-content">
    <div class="ldfcorp-chat">
        <ul id="messages" class="ldfcorp-chat-messages"></ul>
        <form class="form-inline ldfcorp-chat-form" role="form" id="send">
            <div class="form-group">
                <input class="form-control" type="text" name="message" />
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="envoyer" />
            </div>
        </form>
    </div>
</div>
{% endblock %}