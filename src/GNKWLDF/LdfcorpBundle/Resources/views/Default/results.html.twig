{% extends "GNKWLDFLdfcorpBundle::standardLayout.html.twig" %}

{% block title %}{{ parent() }} - {{ 'ldfcorp.results.title'|trans }}{% endblock %}

{% block body %}
    <header>
    {% include "GNKWLDFLdfcorpBundle::bootstrapHeader.html.twig" with { 'pageActive' : 'ldfcorp_results' } %}
    </header>
    <div class="container ldfcorp-content">
        <article>
            <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>{{ 'ldfcorp.pokemonlist.number'|trans }}</th>
                    <th>{{ 'ldfcorp.pokemonlist.name'|trans }}</th>
                    <th>{{ 'ldfcorp.pokemonlist.votes'|trans }}</th>
                </tr>
            </thead>
            <tbody>
        {% for pokemon in list %}
                <tr>
                    <td>{{ pokemon.number }}</td>
                    <td>{{ ('ldfcorp.pokemon.list.' ~ pokemon.number ~ '.name')|trans }}</td>
                    <td>{{ pokemon.vote }}</td>
                </tr>
        {% endfor %}
            </tbody>
        </table>
        </article>
    </div>
{% endblock %}