{% extends "GNKWLDFLdfcorpBundle::standardLayout.html.twig" %}

{% block title %}{{ parent() }} - {{ 'ldfcorp.poll.results.title'|trans }}{% endblock %}

{% block body %}
    <header>
    {{ render(controller('GNKWLDFLdfcorpBundle:Default:bootstrapHeader', { 'pageActive': 'ldfcorp_poll_results' })) }}
    </header>
    <div class="container ldfcorp-content">
        <article>
            <h1>{{ 'ldfcorp.poll.results.title'|trans }}</h1>
    {% if list %}
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>{{ 'ldfcorp.voting.entry.name'|trans }}</th>
                        <th>{{ 'ldfcorp.voting.entry.votes'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
        {% for votingEntry in list %}
                    <tr>
                        <td>{{ votingEntry.name }}</td>
                        <td>{{ votingEntry.vote }}</td>
                    </tr>
        {% endfor %}
                </tbody>
            </table>
    {% endif %}
        </article>
    </div>
{% endblock %}