{% extends "GNKWLDFLdfcorpBundle::standardLayout.html.twig" %}

{% block title %}{{ parent() }} - {{ 'ldfcorp.page.list.title'|trans }}{% endblock %}

{% block body %}
    <header>
    {{ render(controller('GNKWLDFLdfcorpBundle:Default:bootstrapHeader', { 'pageActive': 'ldfcorp_page_list' })) }}
    </header>
    <div class="container ldfcorp-content">
        <article>
            <h1>{{ 'ldfcorp.page.list.title'|trans }}</h1>
            <p><a href="{{ path('ldfcorp_page_create') }}" class="btn btn-success">{{ 'ldfcorp.page.action.add'|trans }}</a></p>
    {% if pages is not empty %}
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>{{ 'ldfcorp.page.list.table.name'|trans }}</th>
                        <th>{{ 'ldfcorp.page.list.table.actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
        {% for page in pages %}
                    <tr>
                        <td><a href="{{ path('ldfcorp_page_show', { 'id' : page.id }) }}">{{ page.name }}</a></td>
                        <td class="ldfcorp-buttons-list">
                            <ul><li><a class="btn btn-primary" href="{{ path('ldfcorp_page_edit', { 'id' : page.id }) }}">{{ 'ldfcorp.page.list.table.action.edit'|trans }}</a></li>
                            <li><a class="btn btn-danger" href="{{ path('ldfcorp_page_delete', { 'id' : page.id }) }}">{{ 'ldfcorp.page.list.table.action.delete'|trans }}</a></li>
                        </td>
                    </tr>
        {% endfor %}
                </tbody>
            </table>
    {% endif %}
        </article>
    </div>
{% endblock %}