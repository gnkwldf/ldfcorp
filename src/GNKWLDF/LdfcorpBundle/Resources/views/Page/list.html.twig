{% extends "GNKWLDFLdfcorpBundle::standardLayout.html.twig" %}

{% block title %}{{ parent() }} - {{ 'ldfcorp.page.list.title' }}{% endblock %}

{% block body %}
    <header>
{% include "GNKWLDFLdfcorpBundle::bootstrapHeader.html.twig" with { 'pageActive' : 'ldfcorp_page_list' } %}
    </header>
    <div class="container ldfcorp-content">
        <article>
            <h1>{{ 'ldfcorp.page.list.title'|trans }}</h1>
            <p><a href="{{ path('ldfcorp_page_create') }}" class="btn btn-success">{{ 'ldfcorp.page.action.add'|trans }}</a></p>
    {% if pages %}
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>{{ 'ldfcorp.page.list.table.name'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
        {% for page in pages %}
                    <tr>
                        <td>{{ page.name }}</td>
                    </tr>
        {% endfor %}
                </tbody>
            </table>
    {% endif %}
        </article>
    </div>
{% endblock %}